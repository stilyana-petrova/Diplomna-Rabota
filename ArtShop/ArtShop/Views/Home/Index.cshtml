@{
    ViewData["Title"] = "Home Page";
}

<!--Slideshow-->
<body>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3500">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/brown-welcome-banner.png" alt="Welcome">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerDecor.png" alt="Decorations">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerPaintings.png" alt="Paintings">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerCustomers.png" alt="Customers">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerShopping.png" alt="Enjoy Shopping">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!--Shows popular categories-->
    <br /><br />

    <div class="mt-5">
        <h1 class="h1 text-center">Our popular categories</h1>
    </div>
    <div class="row justify-content-around mt-5">
        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
                <img class="" src="/images/Done/DSC_0404.JPG" width="300" />
                <h4><a href="/Product/Index?SearchStringCategoryName=decoration&SearchStringDesignerName=">Decorations</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
                <img src="/images/Done/DSC_0394.JPG" width="300" />
                <h4><a href="/Product/Index?SearchStringCategoryName=paintings&SearchStringDesignerName=">Paintings</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
                <img src="https://scontent-sof1-1.xx.fbcdn.net/v/t39.30808-6/271442896_4657914087649445_51813014470424019_n.jpg?_nc_cat=107&ccb=1-7&_nc_sid=0debeb&_nc_ohc=6Ps38dIY1NYAX_XtOTy&_nc_ht=scontent-sof1-1.xx&oh=00_AfBB_1o2veKaFJxKNzF8-lOAZSAHODKhnbffvCylz93gzA&oe=6407145F" width="300" height="200" />
                <h4><a href="/Product/Index?SearchStringCategoryName=calendar&SearchStringDesignerName=">Calendars</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
                <img src="/images/Done/DSC_0395.JPG" width="300" />
                <h4><a href="/Product/Index?SearchStringCategoryName=key+house&SearchStringDesignerName=">Key house</a></h4>
            </div>
        </div>

    </div>

    <br /><br />

   
