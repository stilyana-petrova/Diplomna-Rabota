@{
    ViewData["Title"] = "Home Page";
}


<style>
    #categ {
        background-color: #e7d8c9;
    }

    #about {
        background-color: #cfa26f;
    }
</style>
<!--Slideshow-->
<div class="mt-5 pb-5">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3500">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>

        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/brown-welcome-banner.png" alt="Welcome">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerDecor.png" alt="Decorations">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerPaintings.png" alt="Paintings">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerCustomers.png" alt="Customers">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/bannerShopping.png" alt="Enjoy Shopping">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<!--Shows popular categories-->

<div id="categ">
    <div class="pt-5 pb-5">
        <h1 class="h1 text-center">Our popular categories</h1>
    </div>
    <div class="row justify-content-around mt-5">
        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
                <img class="" src="/images/Done/decorations/dec-1-resize.jpg" width="313" />
                <h4><a href="/Product/Index?SearchStringCategoryName=decoration&SearchStringDesignerName=">Decorations</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
                <img src="/images/Done/paintings/paint-6.jpg" width="300" />
                <h4><a href="/Product/Index?SearchStringCategoryName=paintings&SearchStringDesignerName=">Paintings</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
                <img src="/images/Done/calendars/cal-1.jpg" width="325" />
                <h4><a href="/Product/Index?SearchStringCategoryName=calendar&SearchStringDesignerName=">Calendars</a></h4>
            </div>
        </div>

        <div class="d-flex mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
                <img src="/images/Done/keyhouse/key-2.jpg" width="342" />
                <h4><a href="/Product/Index?SearchStringCategoryName=key+house&SearchStringDesignerName=">Key house</a></h4>
            </div>
        </div>

    </div>
</div>


<!--About Us Page-->
<div id="about" class="pt-5">
    <div class="container-fluid pt-5 pb-5">

        <div class="row">
            <div class="col">
                <img src="~/images/cover-1.jpg" alt="Image" width="300" class="rounded-circle img-fluid"/>
            </div>
            <div class="col">
                <h1 class="h1 mb-5">About Us</h1>
                <p>Information</p>
            </div>
            <div class="w-100"></div>

        </div>
    </div>
</div>
