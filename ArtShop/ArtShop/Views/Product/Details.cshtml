@model ArtShop.Models.Product.ProductDetailsVM

@{
    ViewData["Title"] = "Details";
}

<div>
    <a asp-action="Index"><img src="/images/arrow.png" alt="arow" width="50" /></a>
</div>


<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card-img"><img src="@Html.DisplayFor(model=>model.Photo)" alt="Image" width="400" /></div>
        </div>

        <div class="col-md-6">
            <h1 class="card-title">@Html.DisplayFor(model => model.Name)</h1>
            <div>
                <p style="font-size:20px">@Html.DisplayFor(model => model.Description)</p>
            </div>
            <div>
                <h3>BGN @Html.DisplayFor(model => model.Price)</h3>
            </div>
            <div>
                <p style="font-size:20px">Quantity: @Html.DisplayFor(model => model.Quantity)</p>
                <p style="font-size:20px">Discount: @Html.DisplayFor(model => model.Discount) %</p>
                <p style="font-size:20px">Category: @Html.DisplayFor(model => model.CategoryName)</p>
                <p style="font-size:20px">Designer: @Html.DisplayFor(model => model.DesignerName)</p>
            </div>
            <div>
                @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id"><img src="~/images/edit.png" class="float-lg-right" alt="Edit" width="30" /></a> 

                }
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
